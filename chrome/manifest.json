{
  "manifest_version": 3,
  "name": "Email Chord Interaction System",
  "version": "1.0.0",
  "description": "Advanced keyboard chord system for email clients. Press Z+X together to draw intent lines to email actions.",
  "permissions": [
    "storage",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "*://mail.google.com/*",
    "*://*.outlook.com/*",
    "*://mail.yahoo.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*",
        "*://*.outlook.com/*",
        "*://mail.yahoo.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
